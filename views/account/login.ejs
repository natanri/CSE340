<div>
    <h1><%- title %></h1>
    <p><i><%- messages() %></i></p>
    <% if(errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><i><%= error.msg %></i></li>            
            <% }) %>
        </ul>
        <% } %>
</div>
<div class="login">
    <form id="loginform" action="/account/login" method="post">
        <fieldset>
            <label for="account_email">Email:</label><br>
            <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>"><br>
            <label for="password_account">Password:</label><br>
            <input type="password" id="pswd" name="account_password"  required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <button type="submit">Login</button><br>
        </fieldset>
    </form>
    <span>No account? <a href="/account/register"> Sign-up</a></span>
</div>


